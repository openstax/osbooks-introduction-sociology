    <item>sex ratio</item>
    <item>baby Boomer</item>
    <item>disengagement</item>
        </list></problem>
        <solution id="eip-id1169762662703">
        <label/>

    <para id="eip-id1169762729980">B</para>
        </solution>        </exercise><exercise id="sq1301_ex04" type="section-quiz"><problem id="sq1301_prob04">
