<list id="fs-id1535504" list-type="enumerated" number-style="lower-alpha">
<item>human ecology</item>
<item>dependency theory</item>
<item>modernization</item>
<item>conflict perspective</item>
</list>
</problem>
<solution id="eip-id1378366">
<label/>
<para id="eip-id2167206">C</para>
</solution>                </exercise><exercise id="fs-id1305474" type="section-quiz"><problem id="fs-id1433318">
